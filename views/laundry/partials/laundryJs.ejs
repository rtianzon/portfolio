    let addTransactionBtn = document.getElementById("addTransactionBtn");
    let addTransactionOptionId = document.getElementById("addTransactionOptionId");
    let addExpenseBtn = document.getElementById('addExpenseBtn');
    let addExpenseOptionId = document.getElementById('addExpenseOptionId');

    addTransactionBtn.addEventListener("click", (event) => {
        event.stopPropagation();
        addTransactionOptionId.classList.remove('hideForm');
        addTransactionOptionId.classList.add('showForm');
        addExpenseOptionId.classList.remove('showForm');
